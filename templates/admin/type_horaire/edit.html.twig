{% extends 'base.html.twig' %}

{% block title %}Projet test Lamster
{% endblock %}


{% block body %}

	<div class="container" style="margin-top: -5rem;">

		<div class="row">
			<div class="col-md-2 shadow-sm ">
				<ul class="list-group">
					<li class="list-group-item">
						<a href="{{path('app_horaire')}}" class="text-success">Voir les horraires</a>
					</li>
				</ul>
			</div>


			<div class="col-md-10 shadow-sm">
				<div class="app-wrapper">

					<div class="mb-3 mt-2 ml-5">
						<a href="{{path('app_type_horaire')}}" class=" text-success">retour</a>
					</div>
					<div class="border-top ml-5 mr-5">
						{{ form_start(form_edit_typeHorraire) }}
						<div class="modal-header mb-3 mt-3">
							<h4>Modification du type d'horaire :
							</h4>
						</div>
						<div class=" d-flex justify-content-between ">

							<div class="mb-3 mt-2 ">
								<div class="mt-1 input-field">
									<label for="exampleInputEmail1" class="form-label">Nom de l'horaire :</label>
									{{ form_widget(form_edit_typeHorraire.name) }}
									<span class="error">{{ form_errors(form_edit_typeHorraire.name) }}</span>
								</div>
							</div>


						</div>
						<div class="mt-4 input-field mb-3 border-top">
							<button type="submit" style="text-transform: none;" class="btn btn-success text-white mt-5">Enregistrer</button>
						</div>
						{{ form_end(form_edit_typeHorraire) }}
					</div>

				</div>

			</div>
		</div>
	</div>
{% endblock %}
