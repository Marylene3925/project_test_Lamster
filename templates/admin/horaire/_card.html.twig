<div class="row row-striped mt-3 shadow-sm ">
	{% set trans_day_hash = { 
        "Monday": "Lundi", 
        "Tuesday": "Mardi", 
        "Wednesday": "Mercredi", 
        "Thursday": "Jeudi", 
        "Friday": "Vendredi", 
        "Saturday": "Samedi", 
        "Sunday": "Dimanche", 
		 "January": "Janvier",
		 "February" : "Février",
		 "March" : "Mars",
		 "April" : "Avril", 
		 "May" : "Mai", 
		 "June" : "Juin", 
		 "July" : "Juillet", 
		 "August" : "Aout", 
		 "September" : "Septembre", 
		 "October" : "Octobre", 
		" November" : "Novembre", 
		 "December" : "Décembre", 
    } 
%}
	<div class="col-10">
		<h5 class="text-uppercase">
			<strong>{{horaire.name}}</strong>
		</h5>
		<ul class="list-inline">
			<li class="list-inline-item">
				<i class="fa fa-calendar-o" aria-hidden="true"></i>

				{{ trans_day_hash[horaire.startDate|date('l')] }}
				{{horaire.startDate|date('d')}}
				{{ trans_day_hash[horaire.startDate|date('F')] }}
				{{horaire.startDate|date('Y')}}
				<i class="fa fa-clock-o" aria-hidden="true"></i>
				{{horaire.startDate|date('H:i')}}
				||
			</li>
			<li class="list-inline-item">

				<i class="fa fa-calendar-o" aria-hidden="true"></i>
				<span class="fw-bold text-success">
					{{ trans_day_hash[horaire.endDate|date('l')] }}
					{{horaire.endDate|date('d')}}
					{{ trans_day_hash[horaire.endDate|date('F')] }}
					{{horaire.endDate|date('Y')}}
					<i class="fa fa-clock-o" aria-hidden="true"></i>
					{{horaire.endDate|date('H:i')}}
				</span>
			</li>
		</ul>


		<div class="text-success ">
			<div>Durée totale :</div>
			<div>{{horaire.totalDate}}</div>
		</div>
		<div class="list-inline-item mt-2">
			<i class="fa fa-location-arrow" aria-hidden="true"></i>
			Type d'horaire :
			{{horaire.typeHoraire.name }}
			| Priorité :
			{{horaire.priority }}
		</div>


		<p class="text-success">{{horaire.comment}}</p>
		<div class="d-flex justify-content-between">
			<div>
				<div>Date de création :</div>
				<div>{{horaire.createdDate|date('d/m/Y H:i')}}</div>
			</div>


			<div>
				<div>Date de dernière modification :</div>
				<div>{{horaire.modifiedDate|date('d/m/Y H:i')}}</div>
			</div>
		</div>
		<div class=" mt-3">
			<div class="d-flex">
				<div>
					<a href="{{path('app_edit_horaire', { name: horaire.name }) }}">Modifier</a>
				</div>


				<div class="ml-3">
					<a href="{{path('app_delete_horaire', {'id': horaire.id}) }}" onclick=" return confirm('Attention, ceci va être supprimé définitivement ') ">Supprimer</a>
				</div>

			</div>

		</div>


	</div>
</div>
